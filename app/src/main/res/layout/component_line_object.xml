<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/txt_margin"
    android:layout_marginHorizontal="@dimen/small_margin">

    <TextView
        android:id="@+id/line_object_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/name"
        android:textColor="@color/colorCatTitle"
        android:padding="@dimen/txt_margin"
        android:background="@drawable/shape_category_light"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_object_note"
        app:layout_constraintBottom_toBottomOf="@id/line_object_note"
        app:layout_constraintEnd_toStartOf="@id/line_spell_note"/>

    <TextView
        android:id="@+id/line_object_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorCatTitle"
        android:paddingVertical="@dimen/txt_margin"
        android:paddingHorizontal="@dimen/small_margin"
        android:text="Description
2 lignes"
        android:maxLines="10"
        android:textColor="@color/colorTxt"
        app:layout_constraintStart_toEndOf="@+id/line_object_name"
        app:layout_constraintEnd_toStartOf="@+id/line_object_equip" />

    <LinearLayout
        android:id="@+id/line_object_equip"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorCatTitle"
        android:paddingHorizontal="@dimen/txt_margin"
        app:layout_constraintTop_toTopOf="@id/line_object_name"
        app:layout_constraintBottom_toBottomOf="@id/line_object_name"
        app:layout_constraintEnd_toStartOf="@+id/line_object_weight_layout">
        <ImageView
            android:id="@+id/line_object_equip_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_green"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_object_weight_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorCatTitle"
        android:paddingHorizontal="@dimen/txt_margin"
        app:layout_constraintTop_toTopOf="@id/line_object_name"
        app:layout_constraintBottom_toBottomOf="@id/line_object_name"
        app:layout_constraintEnd_toStartOf="@id/line_object_quantity_layout">
        <TextView
            android:id="@+id/line_object_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textSize="@dimen/medium_txt"
            android:textColor="@color/colorTxt"/>
        <TextView
            android:id="@+id/line_object_weight_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5"
            android:textSize="@dimen/medium_txt"
            android:textColor="@color/colorTxt"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_object_quantity_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape_category_light_txt"
        android:paddingHorizontal="@dimen/txt_margin"
        app:layout_constraintTop_toTopOf="@id/line_object_name"
        app:layout_constraintBottom_toBottomOf="@id/line_object_name"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/line_object_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nb"
            android:textSize="@dimen/medium_txt"
            android:textColor="@color/colorTxt"/>
        <TextView
            android:id="@+id/line_object_quantity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_txt"
            android:text="5"
            android:textColor="@color/colorTxt"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>