<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/txt_margin">

    <LinearLayout
        android:id="@+id/line_item_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line_item_end"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_category_light"
            android:gravity="center"
            android:padding="@dimen/txt_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/line_item_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/txt_margin"
                android:src="@drawable/weapon"
                android:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/line_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/name"
            android:textColor="@color/colorCatTitle"
            android:paddingRight="@dimen/small_margin"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:maxEms="6"/>

        <TextView
            android:id="@+id/line_item_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCatTitle"
            android:paddingVertical="@dimen/txt_margin"
            android:paddingHorizontal="@dimen/small_margin"
            android:text=""
            android:maxEms="10"
            android:textColor="@color/colorTxt"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_item_end"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/shape_category_light_txt"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/line_item_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/line_item_equip"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorCatTitle"
            android:paddingHorizontal="@dimen/txt_margin">
            <ImageView
                android:id="@+id/line_item_equip_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_green"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_item_weight_layout"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorCatTitle"
            android:paddingHorizontal="@dimen/txt_margin">
            <TextView
                android:id="@+id/line_item_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/colorTxt"/>
            <TextView
                android:id="@+id/line_item_weight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/colorTxt"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_item_quantity_layout"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_category_light_txt"
            android:paddingHorizontal="@dimen/txt_margin">
            <TextView
                android:id="@+id/line_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nb"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/colorTxt"/>
            <TextView
                android:id="@+id/line_item_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_txt"
                android:text="5"
                android:textColor="@color/colorTxt"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>