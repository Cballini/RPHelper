<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/select_elem_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/select_elem_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <CheckBox
            android:id="@+id/select_elem_magic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAGIC"
            android:textColor="@color/colorTxt" />
        <CheckBox
            android:id="@+id/select_elem_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRE"
            android:textColor="@color/colorTxt" />
        <CheckBox
            android:id="@+id/select_elem_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIGHTNING"
            android:textColor="@color/colorTxt" />
        <CheckBox
            android:id="@+id/select_elem_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DARKNESS"
            android:textColor="@color/colorTxt" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>