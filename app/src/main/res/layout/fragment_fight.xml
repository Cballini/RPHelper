<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FightFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fight_roll_dice"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/roll_dice"
            android:gravity="center"
            android:padding="@dimen/txt_margin"
            android:textColor="@color/colorCatTitle"
            android:background="@drawable/circle_primary"
            android:layout_margin="@dimen/double_app_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/app_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:background="@color/white"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@+id/fight_roll_dice">
            <com.rphelper.cecib.rphelper.component.DamageComponent
                android:id="@+id/fight_brut_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/small_margin"/>
            <com.rphelper.cecib.rphelper.component.DamageComponent
                android:id="@+id/fight_elem_armor_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/small_margin"/>
            <com.rphelper.cecib.rphelper.component.DamageComponent
                android:id="@+id/fight_block_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/small_margin"/>
            <com.rphelper.cecib.rphelper.component.DamageComponent
                android:id="@+id/fight_elem_block_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/small_margin"/>
            <com.rphelper.cecib.rphelper.component.DamageComponent
                android:id="@+id/fight_weak_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/small_margin"/>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>