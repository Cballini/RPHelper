<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_margin">
        <ImageView
            android:id="@+id/armor_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:padding="@dimen/txt_margin" />

        <TextView
            android:id="@+id/armor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="@string/hat"
            android:textColor="@color/colorTxt"
            android:textSize="@dimen/title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/armor_name_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/armor_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/armor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/colorTxt" />

            <EditText
                android:id="@+id/armor_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginStart="@dimen/txt_margin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_type_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/armor_name_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.rphelper.cecib.rphelper.utils.MultiRowsRadioGroup
                android:id="@+id/armor_type_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/armor_type_hat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTxt"
                        android:text="@string/hat"/>
                    <RadioButton
                        android:id="@+id/armor_type_chest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTxt"
                        android:text="@string/chestplate"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/armor_type_gloves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTxt"
                        android:text="@string/gloves"/>
                    <RadioButton
                        android:id="@+id/armor_type_greaves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTxt"
                        android:text="@string/greaves"/>
                </LinearLayout>

            </com.rphelper.cecib.rphelper.utils.MultiRowsRadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_def_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/armor_type_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/armor_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/def"
                android:textColor="@color/colorTxt" />

            <EditText
                android:id="@+id/armor_def_txt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txt_margin"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_immun_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/armor_def_layout">
            <TextView
                android:id="@+id/armor_immun_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/immun"
                android:textColor="@color/colorTxt"
                android:padding="@dimen/txt_margin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <CheckBox
                    android:id="@+id/armor_immun_bleed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BLEED"
                    android:layout_marginEnd="@dimen/small_margin"/>
                <CheckBox
                    android:id="@+id/armor_immun_poison"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="POISON"
                    android:layout_marginEnd="@dimen/small_margin"/>
                <CheckBox
                    android:id="@+id/armor_immun_frost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FROST"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_res_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/armor_immun_layout">
            <TextView
                android:id="@+id/armor_res_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/res"
                android:textColor="@color/colorTxt"
                android:padding="@dimen/txt_margin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <CheckBox
                    android:id="@+id/armor_res_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FIRE"
                    android:layout_marginEnd="@dimen/small_margin"/>
                <CheckBox
                    android:id="@+id/armor_res_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DARKNESS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/txt_margin">
                <CheckBox
                    android:id="@+id/armor_res_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIGHTNING"
                    android:layout_marginEnd="@dimen/small_margin"/>
                <CheckBox
                    android:id="@+id/armor_res_magic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MAGIC"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_weak_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/armor_res_layout">
            <TextView
                android:id="@+id/armor_weak_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/fai"
                android:textColor="@color/colorTxt"
                android:padding="@dimen/txt_margin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <CheckBox
                    android:id="@+id/armor_weak_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FIRE"
                    android:layout_marginEnd="@dimen/small_margin"/>
                <CheckBox
                    android:id="@+id/armor_weak_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DARKNESS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/txt_margin">
                <CheckBox
                    android:id="@+id/armor_weak_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIGHTNING"
                    android:layout_marginEnd="@dimen/small_margin"/>
                <CheckBox
                    android:id="@+id/armor_weak_magic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MAGIC"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_weight_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/armor_weak_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/armor_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@color/colorTxt" />
            <EditText
                android:id="@+id/armor_weight_txt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txt_margin"
                android:inputType="number|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/armor_weight_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/armor_disequip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disequip"
                android:textColor="@color/colorCatTitle"
                android:padding="@dimen/txt_margin"
                android:background="@color/medium_grey"
                android:layout_marginEnd="@dimen/app_margin"/>
            <TextView
                android:id="@+id/armor_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/colorCatTitle"
                android:padding="@dimen/txt_margin"
                android:background="@color/red"
                android:layout_marginEnd="@dimen/app_margin"/>
            <TextView
                android:id="@+id/armor_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/colorCatTitle"
                android:padding="@dimen/txt_margin"
                android:background="@color/green"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>