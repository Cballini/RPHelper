<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/equip_armor_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/txt_margin"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/equip_armor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:text="@string/equip_armor"
        android:textColor="@color/colorTxt"
        android:textSize="@dimen/title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/equip_armor_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:text="@string/warning_equip"
        android:textAlignment="center"
        android:textColor="@color/colorTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equip_armor_title"/>

    <LinearLayout
        android:id="@+id/equip_comparator_armor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_margin"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/equip_armor_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_border">
        <LinearLayout
            android:id="@+id/equip_comparator_armor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/equip_comparator_armor_base_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_margin"
                    android:text="nom1"
                    android:textColor="@color/colorTxt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/equip_comparator_armor_new_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txt_margin"
                    android:text="nom2"
                    android:textColor="@color/colorTxt"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_armor_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:text="@string/def"
                android:textColor="@color/colorTxt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:id="@+id/equip_comparator_armor_def_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="140"
                android:textColor="@color/bonus"/>
            <TextView
                android:id="@+id/equip_comparator_armor_def_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+12)"
                android:textStyle="bold"
                android:textColor="@color/bonus"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_armor_immun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/immun"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/equip_comparator_armor_immun_plus_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/equip_comparator_armor_immun_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="+"
                android:textStyle="bold"
                android:textColor="@color/bonus"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_immun_plus_poison"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/poison"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_immun_plus_bleed"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bleed"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_immun_plus_frost"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/frost"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/equip_comparator_armor_immun_minus_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/equip_comparator_armor_immun_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/malus"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_immun_minus_poison"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/poison"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_immun_minus_bleed"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bleed"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_immun_minus_frost"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/frost"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_armor_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/equip_comparator_armor_res_plus_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/equip_comparator_armor_res_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="+"
                android:textStyle="bold"
                android:textColor="@color/bonus"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_plus_fire"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fire"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_plus_light"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lightning"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_plus_dark"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/darkness"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_plus_magic"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/magic"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/equip_comparator_armor_res_minus_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/equip_comparator_armor_res_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/malus"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_minus_fire"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fire"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_minus_light"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lightning"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_minus_dark"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/darkness"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_res_minus_magic"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/magic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_armor_weak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:text="@string/fai"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/equip_comparator_armor_weak_plus_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/equip_comparator_armor_weak_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="+"
                android:textStyle="bold"
                android:textColor="@color/malus"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_plus_fire"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fire"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_plus_light"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lightning"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_plus_dark"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/darkness"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_plus_magic"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/magic"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/equip_comparator_armor_weak_minus_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/equip_comparator_armor_weak_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/bonus"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_minus_fire"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fire"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_minus_light"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lightning"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_minus_dark"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/darkness"/>
            <ImageView
                android:id="@+id/equip_comparator_armor_weak_minus_magic"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/magic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/equip_comparator_armor_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:text="@string/weight"
                android:textColor="@color/colorTxt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:id="@+id/equip_comparator_armor_weight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="14"
                android:textColor="@color/bonus"/>
            <TextView
                android:id="@+id/equip_comparator_armor_weight_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+10)"
                android:textStyle="bold"
                android:textColor="@color/malus"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/equip_armor_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:layout_marginVertical="@dimen/app_margin"
        android:background="@color/green"
        android:paddingHorizontal="@dimen/small_margin"
        android:paddingVertical="@dimen/txt_margin"
        android:text="@string/ok"
        android:textColor="@color/colorCatTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equip_comparator_armor"/>

</androidx.constraintlayout.widget.ConstraintLayout>