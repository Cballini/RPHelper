<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/damage_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/damage_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingVertical="@dimen/small_margin"
                android:text="@string/damages"
                android:textColor="@color/colorCatTitle"
                android:minWidth="100dp"
                android:maxEms="8"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/damage_received"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/txt_margin"
                android:gravity="bottom"
                android:inputType="number"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/damage_layout"
        app:layout_constraintEnd_toEndOf="@+id/damage_layout"
        app:layout_constraintTop_toBottomOf="@+id/damage_layout">
    <TextView
        android:id="@+id/damage_equal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="="
        android:gravity="center"
        android:textColor="@color/colorTxt"
        android:textSize="@dimen/title_txt"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/damage_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/small_margin"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorCatTitle"
        android:textSize="@dimen/cat_txt"
        android:textStyle="bold"
        android:layout_weight="1"/>
    </LinearLayout>


    <Button
        android:id="@+id/damage_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/small_margin"
        android:paddingHorizontal="@dimen/double_app_margin"
        android:text="@string/submit"
        android:textColor="@color/colorCatTitle"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/result_layout"
        app:layout_constraintStart_toStartOf="@+id/result_layout"
        app:layout_constraintEnd_toEndOf="@+id/result_layout"/>


</android.support.constraint.ConstraintLayout>