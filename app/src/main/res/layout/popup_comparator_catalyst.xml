<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/equip_catalyst_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/txt_margin"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/equip_catalyst_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:text="@string/equip_catalyst"
        android:textColor="@color/colorTxt"
        android:textSize="@dimen/title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/equip_catalyst_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:text="@string/warning_equip"
        android:textAlignment="center"
        android:textColor="@color/colorTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equip_catalyst_title"/>

    <LinearLayout
        android:id="@+id/equip_comparator_catalyst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_margin"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/equip_catalyst_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_border">
        <LinearLayout
            android:id="@+id/equip_comparator_catalyst_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/equip_comparator_catalyst_base_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_margin"
                    android:text="nom1"
                    android:textColor="@color/colorTxt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/equip_comparator_catalyst_new_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txt_margin"
                    android:text="nom2"
                    android:textColor="@color/colorTxt"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_catalyst_dmg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:text="@string/boost"
                android:textColor="@color/colorTxt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:id="@+id/equip_comparator_catalyst_boost_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="214"
                android:textColor="@color/bonus"/>
            <TextView
                android:id="@+id/equip_comparator_catalyst_boost_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+11)"
                android:textStyle="bold"
                android:textColor="@color/bonus"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_catalyst_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bonus"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/equip_comparator_catalyst_bonus_int_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/equip_comparator_catalyst_bonus_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/txt_margin"
                        android:text="@string/intel"
                        android:textColor="@color/colorTxt"/>
                    <TextView
                        android:id="@+id/equip_comparator_catalyst_bonus_int_ini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textColor="@color/colorTxt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt_margin"
                        android:layout_marginRight="@dimen/txt_margin"
                        android:text="→"
                        android:textColor="@color/colorTxt"/>
                    <TextView
                        android:id="@+id/equip_comparator_catalyst_bonus_int_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textStyle="bold"
                        android:textColor="@color/malus"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/equip_comparator_catalyst_bonus_foi_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/equip_comparator_catalyst_bonus_foi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/txt_margin"
                        android:text="@string/faith"
                        android:textColor="@color/colorTxt"/>
                    <TextView
                        android:id="@+id/equip_comparator_catalyst_bonus_foi_ini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textColor="@color/colorTxt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt_margin"
                        android:layout_marginRight="@dimen/txt_margin"
                        android:text="→"
                        android:textColor="@color/colorTxt"/>
                    <TextView
                        android:id="@+id/equip_comparator_catalyst_bonus_foi_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textStyle="bold"
                        android:textColor="@color/bonus"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equip_comparator_catalyst_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:text="@string/weight"
                android:textColor="@color/colorTxt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="@color/colorTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:id="@+id/equip_comparator_catalyst_weight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:text="14"
                android:textColor="@color/bonus"/>
            <TextView
                android:id="@+id/equip_comparator_catalyst_weight_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+10)"
                android:textStyle="bold"
                android:textColor="@color/malus"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/equip_catalyst_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:layout_marginVertical="@dimen/app_margin"
        android:background="@color/green"
        android:paddingHorizontal="@dimen/small_margin"
        android:paddingVertical="@dimen/txt_margin"
        android:text="@string/ok"
        android:textColor="@color/colorCatTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equip_comparator_catalyst"/>

</androidx.constraintlayout.widget.ConstraintLayout>